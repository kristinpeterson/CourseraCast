<resources>
    <!--
           Base application theme, dependent on API level. This theme is replaced
           by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
       -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="LoginFormContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">16dp</item>
    </style>

    <!-- Custom: Cast Style -->
    <style name="Theme.Castvideo" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <!-- <item name="actionBarItemBackground">@drawable/selectable_background_castvideo</item> -->
        <item name="popupMenuStyle">@style/PopupMenu.Castvideo</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Castvideo</item>
        <item name="actionBarTabStyle">@style/ActionBarTabStyle.Castvideo</item>
        <item name="actionDropDownStyle">@style/DropDownNav.Castvideo</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.Castvideo</item>
        <!-- <item name="actionModeBackground">@drawable/cab_background_top_castvideo</item>
        <item name="actionModeSplitBackground">@drawable/cab_background_bottom_castvideo</item> -->
        <item name="actionModeCloseButtonStyle">@style/ActionButton.CloseMode.Castvideo</item>

        <!-- Light.DarkActionBar specific -->
        <item name="actionBarWidgetTheme">@style/Theme.Castvideo.Widget</item>
        <!-- Seekbar -->
        <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>
        <item name="android:itemTextAppearance">@style/DarkTextAppearance</item>
    </style>

    <style name="DarkTextAppearance">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ActionBar.Solid.Castvideo" parent="@style/Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- <item name="background">@drawable/ab_solid_castvideo</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_castvideo</item>
        <item name="backgroundSplit">@drawable/ab_bottom_solid_castvideo</item> -->
        <item name="progressBarStyle">@style/ProgressBar.Castvideo</item>
    </style>

    <style name="ActionBar.Transparent.Castvideo" parent="@style/Widget.AppCompat.ActionBar">
        <!-- <item name="background">@drawable/ab_transparent_castvideo</item> -->
        <item name="progressBarStyle">@style/ProgressBar.Castvideo</item>
    </style>

    <style name="PopupMenu.Castvideo" parent="@style/Widget.AppCompat.PopupMenu">
        <!-- <item name="android:popupBackground">@drawable/menu_dropdown_panel_castvideo</item> -->
    </style>

    <style name="DropDownListView.Castvideo" parent="@style/Widget.AppCompat.ListView.DropDown">
        <!-- <item name="android:listSelector">@drawable/selectable_background_castvideo</item> -->
    </style>

    <style name="ActionBarTabStyle.Castvideo" parent="@style/Widget.AppCompat.ActionBar.TabView">
        <!-- <item name="android:background">@drawable/tab_indicator_ab_castvideo</item> -->
    </style>

    <style name="DropDownNav.Castvideo" parent="@style/Widget.AppCompat.Spinner.DropDown.ActionBar">
        <!-- <item name="android:background">@drawable/spinner_background_ab_castvideo</item>
        <item name="android:popupBackground">@drawable/menu_dropdown_panel_castvideo</item>
        <item name="android:dropDownSelector">@drawable/selectable_background_castvideo</item> -->
    </style>

    <style name="ProgressBar.Castvideo" parent="@style/Widget.AppCompat.ProgressBar.Horizontal">
        <!-- <item name="android:progressDrawable">@drawable/progress_horizontal_castvideo</item> -->

    </style>

    <style name="ActionButton.CloseMode.Castvideo" parent="@style/Widget.AppCompat.ActionButton.CloseMode">
        <!-- <item name="android:background">@drawable/btn_cab_done_castvideo</item> -->
    </style>

    <!-- this style is only referenced in a Light.DarkActionBar based theme -->
    <style name="Theme.Castvideo.Widget" parent="@style/Theme.AppCompat">
        <item name="popupMenuStyle">@style/PopupMenu.Castvideo</item>
        <item name="dropDownListViewStyle">@style/DropDownListView.Castvideo</item>
    </style>

    <!-- custom -->
    <style name="SeekBarAppTheme" parent="android:Widget.SeekBar">
        <!-- <item name="android:progressDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item>
        <item name="android:indeterminateDrawable">@drawable/apptheme_scrubber_progress_horizontal_holo_light</item> -->
        <item name="android:minHeight">13dip</item>
        <item name="android:maxHeight">13dip</item>
        <!-- <item name="android:thumb">@drawable/apptheme_scrubber_control_selector_holo_light</item> -->
        <item name="android:thumbOffset">16dip</item>
        <item name="android:paddingLeft">16dip</item>
        <item name="android:paddingRight">16dip</item>
    </style>

    <style name="Theme.CastVideoOverlay" parent="@style/Theme.Castvideo">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <!-- item name="android:actionBarStyle">@style/ActionBar.Transparent.CastVideoOverlay</item -->

    </style>

    <style name="ActionBar.Transparent.CastVideoOverlay" parent="@style/Widget.AppCompat.ActionBar">
        <!-- <item name="background">@drawable/ab_solid_democast</item> -->
        <item name="android:titleTextStyle">@style/WhiteText</item>
        <!-- item name="progressBarStyle">@style/ProgressBar.CastVideoOverlay</item -->
    </style>

    <style name="WhiteText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CastDialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowTitleStyle">@style/CastDialogWindowTitle</item>
    </style>

    <style name="Theme.CastVideoOverlayYellow" parent="@style/Theme.CastVideoOverlay">
        <item name="android:seekBarStyle">@style/SeekBarAppTheme</item>
    </style>
</resources>
